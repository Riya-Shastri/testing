{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "enableIvy": false,
    "disableTypeScriptVersionCheck": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types",
      "src/typings.d.ts"
    ],
    "allowJs": true,
    "lib": [
      "es2019",
      "es2018",
      "dom"
    ],
    "useDefineForClassFields": false
  }
}
